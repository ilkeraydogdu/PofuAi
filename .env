# PofuAi Database Configuration
# Veritabanı bağlantı ayarları

# MySQL Bağlantı Ayarları
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=pofuai
DB_PORT=3306
DB_POOL_SIZE=10

# Uygulama Ayarları
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your-secret-key-here

# Logging Ayarları
LOG_LEVEL=INFO
LOG_FILE=storage/Logs/app.log

# Cache Ayarları
CACHE_DRIVER=file
CACHE_TTL=3600

# Session Ayarları
SESSION_DRIVER=file
SESSION_LIFETIME=120 