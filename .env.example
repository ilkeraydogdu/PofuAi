# Marketplace Integration Environment Variables
# Copy this file to .env and fill in your actual credentials

# =============================================================================
# GLOBAL SETTINGS
# =============================================================================
MARKETPLACE_ENCRYPTION_KEY=your_fernet_encryption_key_here
MARKETPLACE_MAX_RETRIES=3
MARKETPLACE_BACKOFF_FACTOR=1.0
MARKETPLACE_ENABLE_LOGGING=true
MARKETPLACE_ENABLE_METRICS=true

# Database Configuration
DATABASE_URL=sqlite:///marketplace.db
# For PostgreSQL: postgresql://user:password@localhost/marketplace_db
# For MySQL: mysql://user:password@localhost/marketplace_db

# Redis Configuration (for caching and session management)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# TRENDYOL MARKETPLACE SETTINGS
# =============================================================================
TRENDYOL_ENABLED=false
TRENDYOL_API_KEY=your_trendyol_api_key
TRENDYOL_API_SECRET=your_trendyol_api_secret
TRENDYOL_SUPPLIER_ID=your_supplier_id
TRENDYOL_SANDBOX=true
TRENDYOL_RATE_LIMIT=1000
TRENDYOL_TIMEOUT=30

# =============================================================================
# HEPSIBURADA MARKETPLACE SETTINGS
# =============================================================================
HEPSIBURADA_ENABLED=false
HEPSIBURADA_USERNAME=your_hepsiburada_username
HEPSIBURADA_PASSWORD=your_hepsiburada_password
HEPSIBURADA_MERCHANT_ID=your_merchant_id
HEPSIBURADA_SANDBOX=true
HEPSIBURADA_RATE_LIMIT=1000
HEPSIBURADA_TIMEOUT=30

# =============================================================================
# N11 MARKETPLACE SETTINGS
# =============================================================================
N11_ENABLED=false
N11_API_KEY=your_n11_api_key
N11_API_SECRET=your_n11_api_secret
N11_SANDBOX=true
N11_RATE_LIMIT=1000
N11_TIMEOUT=30

# =============================================================================
# IYZICO PAYMENT SETTINGS
# =============================================================================
IYZICO_ENABLED=false
IYZICO_API_KEY=your_iyzico_api_key
IYZICO_SECRET_KEY=your_iyzico_secret_key
IYZICO_SANDBOX=true
IYZICO_RATE_LIMIT=1000
IYZICO_TIMEOUT=30

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your_flask_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
PASSWORD_SALT=your_password_salt_here

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/marketplace.log
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true

# =============================================================================
# MONITORING SETTINGS
# =============================================================================
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=60

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=true
TESTING=false

# =============================================================================
# PRODUCTION SETTINGS (uncomment for production)
# =============================================================================
# FLASK_ENV=production
# FLASK_DEBUG=false
# SSL_DISABLE=false
# FORCE_HTTPS=true

# =============================================================================
# API RATE LIMITING
# =============================================================================
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# =============================================================================
# CACHE SETTINGS
# =============================================================================
ENABLE_CACHING=true
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=marketplace_

# =============================================================================
# WEBHOOK SETTINGS
# =============================================================================
WEBHOOK_SECRET_KEY=your_webhook_secret_key
WEBHOOK_TIMEOUT=30
ENABLE_WEBHOOK_VERIFICATION=true

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
EMAIL_ENABLED=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_USE_TLS=true

SMS_ENABLED=false
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
BACKUP_ENABLED=false
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups/marketplace

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
CONNECTION_POOL_SIZE=10
CONNECTION_POOL_MAX_OVERFLOW=20
CONNECTION_POOL_TIMEOUT=30
QUERY_TIMEOUT=30

# =============================================================================
# TESTING SETTINGS
# =============================================================================
TEST_DATABASE_URL=sqlite:///test_marketplace.db
TEST_REDIS_URL=redis://localhost:6379/1