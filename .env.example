# Marketplace Integration System Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME="Marketplace Integration System"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:5000
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development

# Database Configuration
DATABASE_URL=postgresql://marketplace_user:marketplace_pass@localhost:5432/marketplace_db
# Alternative database URLs:
# DATABASE_URL=mysql://user:password@localhost:3306/marketplace_db
# DATABASE_URL=sqlite:///marketplace.db

# Redis Configuration (for caching and queues)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Security & Encryption
MARKETPLACE_ENCRYPTION_KEY=generate-a-fernet-key-here
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600
